.jumbotron
  = form_for abc do |f|
    - if abc.errors.any?
      #error_explanation
        %h2= "#{pluralize(@abc.errors.count, "error")} prohibited this abc from being saved:"
        %ul
          - abc.errors.full_messages.each do |msg|
            %li= msg

    .field
      = f.label :"myśl automatyczna"
      = f.text_area :aut_thought, class: "form-control"
    .field
      = f.label :"zniekształcenie poznawcze (błąd)"
      = f.text_area :mistake, class: "form-control"
    .field
      = f.label :"myśl adaptacyjna"
      = f.text_area :adapt_thought, class: "form-control"
    .actions
      = f.submit 'Save'
