= form_for @beck do |f|
  - if @beck.errors.any?
    #error_explanation
      %h2= "#{pluralize(@beck.errors.count, "error")} prohibited this beck from being saved:"
      %ul
        - @beck.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :date
    = f.date_select :date
  .field
    = f.label :notes
    = f.text_area :notes
  .field
    = f.label :value
    = f.number_field :value
  .actions
    = f.submit 'Save'
