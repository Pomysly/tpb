= form_for @scheme do |f|
  - if @scheme.errors.any?
    #error_explanation
      %h2= "#{pluralize(@scheme.errors.count, "error")} prohibited this scheme from being saved:"
      %ul
        - @scheme.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :initiator
    = f.text_area :initiator
  .field
    = f.label :emotions
    = f.text_area :emotions
  .field
    = f.label :thoughts
    = f.text_area :thoughts
  .field
    = f.label :behaviour
    = f.text_area :behaviour
  .field
    = f.label :my_scheme
    = f.text_area :my_scheme
  .field
    = f.label :h_thought_text
    = f.text_field :h_thought_text
  .field
    = f.label :r_worry
    = f.text_area :r_worry
  .field
    = f.label :o_reaction
    = f.text_area :o_reaction
  .field
    = f.label :h_behaviour
    = f.text_area :h_behaviour
  .field
    = f.label :belief
    = f.text_field :belief
  .actions
    = f.submit 'Save'
