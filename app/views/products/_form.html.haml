= form_for [category, product] do |f|
  - if product.errors.any?
    #error_explanation
      %h2= "#{pluralize(product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - product.errors.full_messages.each do |msg|
          %li= msg

  
  .field
    = f.label :name
    %br
    = f.text_field :title
  .field
    = f.label :breed
    %br
    = f.text_field :breed
  .field
    = f.label :gender
    %br
    = f.text_field :gender
  .field
    = f.label :"Year of birth"
    %br
    = f.text_field :YoB
  .field
    = f.label :color
    %br
    = f.text_field :color
  .field
    = f.label :height
    %br
    = f.text_field :height
  .field
    = f.label :description
    %br
    = f.text_area :description
  .field
    = f.label :price
    %br
    = f.text_field :price
    .field
    = f.label :"youtube url"
    %br
    = f.text_field :youtube
  .actions
    = f.submit 'Save', class: "btn btn-large btn-primary"
