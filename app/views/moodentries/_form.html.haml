= form_for [user, moodentry] do |f|
  - if @moodentry.errors.any?
    #error_explanation
      %h2= "#{pluralize(@moodentry.errors.count, "error")} prohibited this moodentry from being saved:"
      %ul
        - @moodentry.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :date
    = f.date_select :date
  .field
    = f.label :note
    = f.text_area :note
  .field
    = f.label :mood
    = f.number_field :mood
  .actions
    = f.submit 'Save'
