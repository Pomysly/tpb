%ol.breadcrumb
  %li= link_to "Portfolio", root_path
  %li= link_to "Schematy", schemas_path
  %li.active #{schema.name}

  %h1 Schemat: #{schema.name}
%p
  %b Wiara w schemat: #{schema.belief}
%br

%table.table
  %tr
    %td Czynnik wywołujący:
    %td= schema.initiator

  %tr
    %td Moje emocje:
    %td= schema.emotions

  %tr
    %td Moje myśli:
    %td= schema.thoughts

  %tr
    %td Moje aktualne zachowanie:
    %td= schema.behaviour

  %tr
    %td Mój schemat:
    %td= schema.my_schema

  %tr
    %td Moje zdrowe widzenie:
    %td= schema.h_thought

  %tr
    %td Moje realistyczne zmartwienie:
    %td= schema.r_worry

  %tr
    %td Moja nadmierna reakcja:
    %td= schema.o_reaction

  %tr
    %td Zdrowe zachowanie:
    %td= schema.h_behaviour

= link_to 'Edit', edit_schema_path(schema), class: "btn btn-large btn-primary"
= link_to 'Back', schemas_path
